@model MovieBox.ViewModels.CustomerFormViewModel;

@{
    ViewData["Title"] = "New";
}

<h4>New Customer</h4>
@using (Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control", @style = "width: 30%" })
        @Html.ValidationMessageFor(c => c.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control", @style = "width: 30%" })
        @Html.ValidationMessageFor(c => c.Customer.MembershipTypeId)
    </div>
    <div class="form-group"></div>
    <div>
        @Html.LabelFor(c => c.Customer.BirthDate)
        @Html.TextBoxFor(c => c.Customer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control", @style = "width: 30%" })
        @Html.ValidationMessageFor(c => c.Customer.BirthDate)
    </div>
    <div class="form-group"></div>
    <div class="checkbox">
        <label class="form-check-label">
            @Html.CheckBoxFor(c => c.Customer.IsSubscribedToNewsletter) Subscribe to Newsletter?
        </label>
    </div>
    <div class="form-group"></div>
    @Html.HiddenFor(c => c.Customer.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
